@model AspMvcWebshop.Models.Category

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="promo-alt">
    <div id="promo1">
        <h1>Brand new MacBook Pro</h1>
        <p>
            With a special price,
            <span class="bold">today only!</span>
        </p>
        <a href="#" class="secondary-btn">READ MORE</a><img src="../content/../content/img/macbook.png" alt="MacBook Pro" />
    </div> <!-- end promo1-->
    <div id="promo2">
        <h2>
            The iPhone 5 is now<br />
            available in our store.
        </h2><a href="">Read more <img src="../content/img/right-arrow.gif" alt="Read more" /></a>
        <img src="../content/img/iphone.png" alt="iPhone" />
    </div> <!-- end promo2-->
    <div id="promo3">
        <img src="../content/img/thunderbolt.png" alt="Thunderbolt" />
        <h2>
            The 27"<br />
            Thunderbolt display<br />
            simply stunning.
        </h2>
        <a href="#">Read more <img src="../content/img/right-arrow.gif" alt="Read more" /></a>
    </div> <!-- end promo3-->
</section><!-- end promo-alt -->
<section id="main-content" class="clearfix">
    <h2>Browsing Category : @Model.Name</h2>
    <hr />
    <aside id="categories-menu">
        <h3>CATEGORIES</h3>
        @{Html.RenderAction("CategoryMenu", "Store");}
    </aside><!--end categories menu-->

    <div id="listings">
        @foreach (var product in Model.Products)
        {        
        <div class="product">
            <a href="@Url.Action("Details", "Store", new { id = product.productId })">
                <img src="@product.ProductImg" alt="product" class="feature" />
            </a>

            <h3>@Html.ActionLink(product.Name,
                "Details", new { id = product.productId })</h3>

            <p>
                This is a short description.his is a short description.
                his is a short description.his is a short description.
            </p>
            <h5>Availability: <span class="instock">In Stock</span></h5>

            <p>
                <a href="#" class="cart-btn">
                    <span class="price">$499,99</span>
                    <img src="../content/img/white-cart.gif" alt="Add to Cart" />
                    ADD TO CART
                </a>
            </p>

            <p class="wish">
                <a href="">
                    <img src="../content/img/wish.gif" alt="Add to Wishlist" />
                    Add to Wishlist
                </a>
            </p>
        </div>
        }
    </div><!-- end listings -->
</section><!-- end main content -->

<hr />

<section id="pagination">
    <p>
        Page:
        <span class="current">1</span> /
        <a href="#">2</a> /
        <a href="#">3</a>
    </p>
</section><!-- end pagination -->

<hr />