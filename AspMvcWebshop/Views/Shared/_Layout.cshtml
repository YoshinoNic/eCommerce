<!DOCTYPE html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->
    <link rel="stylesheet" href="~/content/normalize.css">
    <link rel="stylesheet" href="~/content/main.css">
    <script src="~/content/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">
            You are using an <strong>outdated</strong> browser. 
            Please <a href="http://browsehappy.com/">upgrade your browser</a> 
            to improve your experience.
        </p>
    <![endif]-->

    <div id="wrapper">
        <header>
            <section id="top-are">
                <p>Phone orders: 1-800-000 | Email Us : <a href="mailto:office@office.com">office@office.com</a></p>
            </section> <!--end top area-->
            <section id="action-bar">
                <div id="logo">
                    <a href="@Url.Action("Index", "Home")"><span id="logo-accent">e</span>Commerce</a>
                </div><!--end logo-->
                <nav class="dropdown">
                    <ul>
                        <li>
                            <a href="#">Shop by Category <img src="~/content/img/down-arrow.gif" alt="Shop By Category" /></a>
                            @{Html.RenderAction("CategoryMenu", "Store");}
                        </li>
                    </ul>
                </nav>
                <div id="search-form">
                    <form action="#" method="get">
                        <input type="search" name="search" placeholder="Search by keyword" class="search" />
                        <input type="submit" value="search" class="search submit" />
                    </form>
                </div><!-- end search form -->
                <div id="user-menu">
                    <nav id="signin" class="dropdown">
                        @{Html.RenderAction("AdminMenu", "Store");}
                        @{Html.RenderAction("GuestMenu", "Store");}
                        @{Html.RenderAction("RegisteredUser", "Store");}
                    </nav>
                    @*<nav class="dropdown">
                        <ul>
                            <li>
                                <a href="#">
                                    <img src="~/content/img/user-icon.gif" alt="Administrator">
                                    Administrator <img src="~/content/img/down-arrow.gif" alt="Administrator" />
                                </a>
                                <ul>
                                    <li><a href="#">Order History</a></li>
                                    <li><a href="#">Wishlist</a></li>
                                    <li><a href="#">Sign Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>*@
                </div><!-- end user menu -->
                <div id="view-cart">
                    <img src="~/content/img/blue-cart.gif" alt="View Cart" />
                    @Html.ActionLink("View Cart","Index", "ShoppingCart") 
                </div><!-- end view cart -->
            </section><!-- end bottom action bar-->
        </header>

        <!--==========================================================================
            CONTENT
        ========================================================================== -->
    
        @RenderBody()

        <!--==========================================================================
            END CONTENT
        ========================================================================== -->


        <footer>
            <section id="contact">
                <h3>
                    For phone orders please call 1-800-000. You<br />can also email us at
                    <a href="mailto:office@office.com">office@office.com</a>
                </h3>
            </section>

            <hr />

            <section id="links">
                <div id="my-account">
                    <h4>MY ACCOUNT</h4>
                    <ul>
                        <li><a href="#">Sign In</a></li>
                        <li><a href="#">Sign Up</a></li>
                        <li><a href="#">Wishlist</a></li>
                        <li><a href="#">Order History</a></li>
                        <li><a href="#">Shopping Cart</a></li>
                    </ul>
                </div> <!-- end my-account -->
                <div id="info">
                    <h4>INFORMATION</h4>
                    <ul>
                        <li><a href="#">Terms of Use</a></li>
                        <li><a href="#">PRIVACY POLICY</a></li>
                    </ul>
                </div> <!-- end info -->
                <div id="extras">
                    <h4>EXTRAS</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div> <!-- end extras -->
            </section> <!-- end links -->
            <hr />

            <section class="clearfix">
                <div id="copyright">
                    <div id="logo">
                        <a href="#"><span id="logo-accent">e</span>Commerce</a>
                    </div><!--end logo-->
                    <p id="store-desc">This is a short description of the store</p>
                    <p class="store-copy">&copy; 2013 eCommerce. Copyright tuts+</p>
                </div><!-- end copyright -->
                <div id="connect">
                    <h4>Connect With Us</h4>
                    <ul>
                        <li class="twitter"><a href="#">Twitter</a></li>
                        <li class="fb"><a href="#">Facebook</a></li>
                    </ul>
                </div><!-- end connect -->
                <div id="payments">
                    <h4>SUPPORTED PAYMENT METHODS</h4>
                    <img src="~/content/img/payment-methods.png" alt="Payment Methods" />
                </div>
            </section>
        </footer>
    </div><!-- end wrapper-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')</script>
    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>

